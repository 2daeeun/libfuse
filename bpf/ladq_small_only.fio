# LLQ: 작은·동기 쓰기만 단독 수행(지연 기준선)
[global]
ioengine=io_uring
direct=0
time_based=1
runtime=60s
ramp_time=5s
group_reporting=1
lat_percentiles=1
percentile_list=50,90,95,99,99.5,99.9
write_lat_log=sm_sync
log_avg_msec=100

[sm_sync]
rw=randwrite
bs=4k
iodepth=1
numjobs=1
nrfiles=2000
filesize=32k
openfiles=64
create_on_open=1
unlink=1
fsync=1                   # 매 I/O마다 fsync → 지연 민감
directory=__MNT__/ladq_llq
